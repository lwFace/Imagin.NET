<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Imagin.Common.Controls">
    <Style x:Key="{x:Type local:RippleDecorator}" TargetType="{x:Type local:RippleDecorator}">
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.RippleDecorator.Border}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="RippleDuration" Value="0:0:0.75"/>
        <Setter Property="FromStrokeThickness" Value="15"/>
        <Setter Property="MaximumRadius" Value="75"/>
        <Setter Property="ToStrokeThickness" Value="30"/>
    </Style>
</ResourceDictionary>