<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Imagin.Common.Controls"
    xmlns:Markup="clr-namespace:Imagin.Common.Markup">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{Markup:Uri Imagin.Common.WPF, Styles/FrameworkElement.xaml}"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{x:Type local:AnglePicker}" TargetType="{x:Type local:AnglePicker}" BasedOn="{StaticResource {x:Type FrameworkElement}}">
        <Setter Property="Background" Value="{DynamicResource Brush.AnglePicker.Background}"/>
        <Setter Property="NeedleStroke" Value="{DynamicResource Brush.AnglePicker.NeedleStroke}"/>
        <Setter Property="OriginFill" Value="{DynamicResource Brush.AnglePicker.OriginFill}"/>
        <Setter Property="OriginStroke" Value="{DynamicResource Brush.AnglePicker.OriginStroke}"/>
    </Style>
</ResourceDictionary>