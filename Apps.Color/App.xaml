<i:SingleApplication 
    x:Class="Color.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://imagin.tech/imagin/common"
    StartupUri="pack://application:,,,/Color;component/MainWindow.xaml">
    <i:SingleApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <i:Themes/>
                <ResourceDictionary Source="{i:Styles Imagin.Common.WPF}"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type i:AboutWindow}">
                <Setter Property="Logo" Value="{i:Image Color, Logo.ico}"/>
            </Style>
        </ResourceDictionary>
    </i:SingleApplication.Resources>
</i:SingleApplication>